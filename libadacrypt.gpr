project LibAdaCrypt is

   for Library_Name use "libadacrypt";
   for Library_Kind use "static";
   for Library_Dir use "src\lib";
   for Library_Src_Dir use "src\lib";
   for Object_Dir use "src";
   for Source_Dirs use ("src");

   package Builder is
      for Default_Switches ("ada") use ("-j4");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-O2", "-gnatn", "-gnat12");
   end Compiler;

end LibAdaCrypt;

